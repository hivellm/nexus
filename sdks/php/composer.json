{
    "name": "hivellm/nexus-php",
    "description": "Official PHP client library for Nexus, a high-performance Neo4j-compatible graph database",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "graph-database",
        "neo4j",
        "cypher",
        "database",
        "nexus",
        "graph"
    ],
    "authors": [
        {
            "name": "HiveLLM Contributors",
            "email": "info@hivellm.org"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.8",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "Nexus\\SDK\\": "src/"
        },
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Nexus\\SDK\\Tests\\": "tests/"
        },
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests --level=8",
        "cs-check": "phpcs src tests --standard=PSR12",
        "cs-fix": "phpcbf src tests --standard=PSR12"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
